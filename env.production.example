# Production Environment Configuration
# Airport Parking Platform

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
FRONTEND_URL=https://airportparking.com

# ===== DATABASE CONFIGURATION =====
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=airport_parking_supplier
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password

# ===== PAYMENT GATEWAY CONFIGURATION =====
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ===== EMAIL SERVICE CONFIGURATION =====
# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@airportparking.com
SENDGRID_FROM_NAME=Airport Parking Service

# ===== SMS SERVICE CONFIGURATION =====
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===== AUTHENTICATION CONFIGURATION =====
JWT_SECRET=your_super_secret_jwt_key_change_in_production
SESSION_SECRET=your_super_secret_session_key_change_in_production

# Replit Auth Configuration (if using)
REPLIT_CLIENT_ID=your_replit_client_id_here
REPLIT_CLIENT_SECRET=your_replit_client_secret_here
REPLIT_REDIRECT_URI=https://airportparking.com/auth/replit/callback

# ===== EXTERNAL API CONFIGURATION =====
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Weather API
WEATHER_API_KEY=your_weather_api_key_here

# Currency API
CURRENCY_API_KEY=your_currency_api_key_here

# ===== CACHE CONFIGURATION =====
# Redis Configuration
REDIS_HOST=your_redis_host_here
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ===== MONITORING CONFIGURATION =====
METRICS_PORT=9090
LOG_LEVEL=warn

# ===== SUPPORT CONFIGURATION =====
SUPPORT_EMAIL=support@airportparking.com
TEST_EMAIL=test@airportparking.com
TEST_PHONE=+1234567890

# ===== SECURITY CONFIGURATION =====
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://airportparking.com
CORS_CREDENTIALS=true

# ===== FEATURE FLAGS =====
ENABLE_ADVANCED_SEARCH=true
ENABLE_MAP_INTEGRATION=true
ENABLE_REAL_TIME_PRICING=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_GROUP_BOOKINGS=true
ENABLE_RECURRING_BOOKINGS=true
ENABLE_SUPPLIER_ANALYTICS=true
ENABLE_USER_ANALYTICS=true

# ===== BUSINESS LOGIC CONFIGURATION =====
MAX_ADVANCE_BOOKING_DAYS=365
MIN_ADVANCE_BOOKING_HOURS=1
CANCELLATION_WINDOW_HOURS=24
REFUND_PERCENTAGE=0.9
MAX_GROUP_SIZE=10

# ===== NOTIFICATION CONFIGURATION =====
EMAIL_ENABLED=true
SMS_ENABLED=true
PUSH_ENABLED=false
AUTO_REMINDERS=true
REMINDER_HOURS=24,2

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/
TEMP_DIR=temp/

# ===== LOGGING CONFIGURATION =====
LOG_FORMAT=json
LOG_TRANSPORTS=console,file
LOG_FILE_FILENAME=logs/app.log
LOG_FILE_MAXSIZE=5242880
LOG_FILE_MAXFILES=5

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===== SSL/TLS CONFIGURATION =====
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_S3_REGION=us-east-1

# ===== CDN CONFIGURATION =====
CDN_ENABLED=true
CDN_URL=https://cdn.airportparking.com
CDN_API_KEY=your_cdn_api_key_here

# ===== ANALYTICS CONFIGURATION =====
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token_here
HOTJAR_ID=your_hotjar_id_here

# ===== ERROR TRACKING CONFIGURATION =====
SENTRY_DSN=your_sentry_dsn_here
ROLLBAR_ACCESS_TOKEN=your_rollbar_access_token_here

# ===== PERFORMANCE MONITORING =====
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
DATADOG_API_KEY=your_datadog_api_key_here

# ===== EMAIL TEMPLATE IDs (SendGrid Dynamic Templates) =====
EMAIL_TEMPLATE_WELCOME=d_1234567890abcdef
EMAIL_TEMPLATE_BOOKING_CONFIRMATION=d_1234567890abcdef
EMAIL_TEMPLATE_PAYMENT_CONFIRMATION=d_1234567890abcdef
EMAIL_TEMPLATE_PASSWORD_RESET=d_1234567890abcdef
EMAIL_TEMPLATE_BOOKING_REMINDER=d_1234567890abcdef
EMAIL_TEMPLATE_BOOKING_CANCELLATION=d_1234567890abcdef

# ===== WEBHOOK ENDPOINTS =====
STRIPE_WEBHOOK_URL=https://airportparking.com/api/payments/webhook/stripe
PAYPAL_WEBHOOK_URL=https://airportparking.com/api/payments/webhook/paypal

# ===== THIRD-PARTY INTEGRATIONS =====
# Zendesk Support
ZENDESK_URL=https://yourcompany.zendesk.com
ZENDESK_EMAIL=your_zendesk_email_here
ZENDESK_API_TOKEN=your_zendesk_api_token_here

# Intercom
INTERCOM_APP_ID=your_intercom_app_id_here
INTERCOM_ACCESS_TOKEN=your_intercom_access_token_here

# ===== COMPLIANCE CONFIGURATION =====
# GDPR Compliance
GDPR_ENABLED=true
GDPR_DATA_RETENTION_DAYS=2555
GDPR_PRIVACY_POLICY_URL=https://airportparking.com/privacy
GDPR_TERMS_URL=https://airportparking.com/terms

# PCI Compliance
PCI_COMPLIANCE_ENABLED=true
PCI_SAQ_TYPE=A

# ===== GEOGRAPHIC CONFIGURATION =====
# Supported Countries
SUPPORTED_COUNTRIES=US,GB,CA,AU,DE,FR,ES,IT,NL,SE
DEFAULT_COUNTRY=US

# Supported Currencies
SUPPORTED_CURRENCIES=USD,GBP,EUR,CAD,AUD
DEFAULT_CURRENCY=USD

# Timezone Configuration
DEFAULT_TIMEZONE=UTC
SUPPORTED_TIMEZONES=UTC,America/New_York,Europe/London,Europe/Paris,Asia/Tokyo

# ===== INTEGRATION TESTING =====
INTEGRATION_TEST_MODE=false
MOCK_PAYMENT_GATEWAYS=false
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false

